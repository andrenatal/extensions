{
  "manifest_version": 2,
  "name": "FakerFact: Fake News Detection",
  "description": "This extension allows you to check links and tabs for indications of fake news using www.fakerfact.org's AI",
  "version": "5.0",
  "browser_action": {
    "default_icon": "fakerfact-32.png",
    "default_title": "FakerFact Check",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "icons": {
    "16": "fakerfact-16.png",
    "48": "fakerfact-48.png",
    "96": "fakerfact-96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "http://localhost:5000/",
    "*://twitter.*/*"
  ]
}